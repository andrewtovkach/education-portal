@model EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Users" asp-action="Index">Пользователи</a></li>
        <li class="breadcrumb-item active" aria-current="page">Редактирование пользователя</li>
    </ol>
</nav>

<div class="page-header">
    <h1>Редактирование пользователя</h1>
    <hr />
</div>

<div class="row">
    <div class="col-md-3">
        @Html.Partial("_UsersNav", "Редактирование пользователя")
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit" asp-controller="Users">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>