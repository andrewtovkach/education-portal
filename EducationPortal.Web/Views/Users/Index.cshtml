@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewBag.Title = "Пользователи";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Пользователи</li>
    </ol>
</nav>

<div class="page-header">
    <h1>Пользователи</h1>
    <hr />
</div>

<a asp-action="Create" class="btn btn-primary" style="margin-bottom: 20px;">Добавить пользователя</a>

<table class="table table-hover">
    <thead class="thead-light">
    <tr>
        <th>Email</th>
        <th></th>
    </tr>
    </thead>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-outline-primary" asp-action="EditRoles" asp-route-userid="@user.Id">Права доступа</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
